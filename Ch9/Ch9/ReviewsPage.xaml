<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Ch9;assembly=Ch9"
             mc:Ignorable="d"
             x:Class="Ch9.ReviewsPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:RatingToGlyphConverter x:Key="ratingToGlyph"/>            
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="5,0,5,5">

            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Spacing="10">
                <Label Text="{Binding Path=Movie.Title}" FontSize="Large" LineBreakMode="WordWrap" HorizontalOptions="Start"/>
                <Label Text="{Binding Path=Movie.Year}" FontSize="Large" LineBreakMode="NoWrap" MaxLines="1"  HorizontalOptions="EndAndExpand" MinimumWidthRequest="150"/>
            </StackLayout>

            <Label Text="{Binding Path=Movie.Tagline}"/>
            <Label Text="{Binding Path=Movie.Genre}" FontSize="Small"/>


            <StackLayout Orientation="Horizontal">
                <Label Text="{Binding Path= Movie.Duration, StringFormat='{0} mins'}" IsVisible="{Binding Path=Movie.Duration.HasValue}"/>
                <Label Text="{Binding Path= Movie.VoteAverage, StringFormat='Score: {0:F1}'}"/>
                <Label Text="{Binding Path= Movie.VoteCount, StringFormat='Votes: {0}'}"/>
                <Label Text="{Binding Path= Movie.Countries}"/>
            </StackLayout>

            
            <Label Text="Rate it"/>
            <Grid HorizontalOptions="End"
                  ColumnSpacing="0"
                  Padding="0">                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="20" />
                </Grid.ColumnDefinitions>


                <Button Grid.Row="0" Grid.Column="0"
                        BackgroundColor="Transparent"
                        HorizontalOptions="Center">
                    <Button.ImageSource>
                        <FontImageSource Glyph="{Binding UsersRating, Converter={StaticResource Key=ratingToGlyph}, ConverterParameter=0}"
                         FontFamily="{OnPlatform iOS=SegMDL2, Android=SegMDL2.ttf#}"
                         Size="20" 
                         Color="Gold"/>
                    </Button.ImageSource>
                </Button>
                <Button Grid.Row="0" Grid.Column="1"
                        BackgroundColor="Transparent">
                    <Button.ImageSource>
                        <FontImageSource Glyph="{Binding UsersRating, Converter={StaticResource Key=ratingToGlyph}, ConverterParameter=1}"
                         FontFamily="{OnPlatform iOS=SegMDL2, Android=SegMDL2.ttf#}"
                         Size="20" 
                         Color="Gold"/>
                    </Button.ImageSource>
                </Button>
                <Button Grid.Row="0" Grid.Column="2"
                        BackgroundColor="Transparent">
                    <Button.ImageSource>
                        <FontImageSource Glyph="{Binding UsersRating, Converter={StaticResource Key=ratingToGlyph}, ConverterParameter=2}"
                         FontFamily="{OnPlatform iOS=SegMDL2, Android=SegMDL2.ttf#}"
                         Size="20" 
                         Color="Gold"/>
                    </Button.ImageSource>
                </Button>
                <Button Grid.Row="0" Grid.Column="3"
                        BackgroundColor="Transparent">
                    <Button.ImageSource>
                        <FontImageSource Glyph="{Binding UsersRating, Converter={StaticResource Key=ratingToGlyph}, ConverterParameter=3}"
                         FontFamily="{OnPlatform iOS=SegMDL2, Android=SegMDL2.ttf#}"
                         Size="20" 
                         Color="Gold"/>
                    </Button.ImageSource>
                </Button>
                <Button Grid.Row="0" Grid.Column="4"
                        BackgroundColor="Transparent">
                    <Button.ImageSource>
                        <FontImageSource Glyph="{Binding UsersRating, Converter={StaticResource Key=ratingToGlyph}, ConverterParameter=4}"
                         FontFamily="{OnPlatform iOS=SegMDL2, Android=SegMDL2.ttf#}"
                         Size="20"
                         Color="Gold"/>
                    </Button.ImageSource>
                </Button>
                <Button Grid.Row="0" Grid.Column="5"
                        Command="{Binding DecreaseRatingCommand}"
                        BackgroundColor="Transparent"
                        HorizontalOptions="Center">
                    <Button.ImageSource>
                        <FontImageSource Glyph="&#xf0ae;"
                         FontFamily="{OnPlatform iOS=SegMDL2, Android=SegMDL2.ttf#}"
                         Size="12" 
                         Color="Black"/>
                    </Button.ImageSource>
                </Button>
                
                <Label Grid.Row="0" Grid.Column="6"
                    Text="{Binding UsersRating}"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       />
                
                <Button Grid.Row="0" Grid.Column="7"
                        Command="{Binding IncreaseRatingCommand}"
                        BackgroundColor="Transparent"
                        HorizontalOptions="Center">
                    <Button.ImageSource>
                        <FontImageSource Glyph="&#xf0ad;"
                         FontFamily="{OnPlatform iOS=SegMDL2, Android=SegMDL2.ttf#}"
                         Size="12" 
                         Color="Black"/>
                    </Button.ImageSource>
                </Button>


            </Grid>          
            


            <Label Text="Reviews" FontSize="Large" TextColor="DarkGray"/>

            <ListView HasUnevenRows="True"
                      ItemsSource="{Binding Reviews}"
                      SeparatorVisibility="Default"
                      SeparatorColor="DarkSeaGreen">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>

                            <StackLayout Orientation="Vertical" Padding="5" Margin="10">
                                <Label Text="{Binding Author}" FontSize="Large"/>
                                <local:ExtendedLabel Text="{Binding Content}" FontSize="Small"  Visual="Material" JustifyText="True"/>
                                <!--<Label Text="{Binding Url}" FontSize="Small"/>-->
                            </StackLayout>

                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>